@model MvcApplication14.Controllers.UserViewModel


<h1>SIGN IN!!!</h1>
<form class="form-signin" action="/home/signin" method="POST">
    <h2 class="form-signin-heading">Signin our awesome site!</h2>
    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" id="inputEmail" class="form-control" placeholder="Email address" value="@Model.Name" name="username">
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="inputPassword" class="form-control" placeholder="Password" name="password">


    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

</form>
